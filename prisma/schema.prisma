generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  order       Int
  basePrice   Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sizes       Size[]
  extras      Extra[]
}

model Size {
  id        String      @id @default(cuid())
  name      ProductSize
  price     Float
  Product   Product?    @relation(fields: [productId], references: [id])
  productId String?
}

model Extra {
  id        String       @id @default(cuid())
  name      ProductExtra
  price     Float
  Product   Product?     @relation(fields: [productId], references: [id])
  productId String?
}

enum ProductSize {
  SMALL
  MEDIUM
  LARGE
}

enum ProductExtra {
  CHEESE
  BACON
  MUSHROOMS
  ONIONS
  PEPPERS
  TOMATOES
}
